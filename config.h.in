#ifndef RMF_CONFIG_H
#define RMF_CONFIG_H

#ifdef _MSC_VER

#ifdef RMF_EXPORTS
#define RMFEXPORT __declspec(dllexport)
#else // EXPORTS
#define RMFEXPORT __declspec(dllimport)
#endif // EXPORTS

#else // _MSC_VER

#define RMFEXPORT

#endif // _MSC_VER


#define RMF_VERSION_MAJOR @RMF_VERSION_MAJOR@
#define RMF_VERSION_MINOR @RMF_VERSION_MINOR@

#define RMF_HAS_DEBUG_VECTOR @RMF_HAS_DEBUG_VECTOR@
#define RMF_HAS_LOG4CXX @RMF_HAS_LOG4CXX@

#define RMF_HAS_OVERRIDE @RMF_HAS_OVERRIDE@
#if RMF_HAS_OVERRIDE
#define RMF_OVERRIDE override
#else
#define RMF_OVERRIDE
#endif

#define RMF_HAS_EXTERN @RMF_HAS_EXTERN@
#if RMF_HAS_EXTERN && !defined(SWIG) && !defined(RMF_DOXYGEN)
#define RMF_VECTOR_DECL(Name)  namespace RMF {\
class Name;\
typedef std::vector<Name> Name##s;\
}\
extern template class std::vector<RMF::Name>

#define RMF_VECTOR_DEF(Name) template class std::vector<RMF::Name>

#define RMF_TEMPLATE_DECL(TemplateName, TemplateArg, Name)              \
  namespace RMF {                                                       \
  typedef TemplateName<TemplateArg> Name;                               \
  typedef std::vector<Name> Name##s;                                    \
  }                                                                     \
  extern template class RMF::TemplateName<RMF::TemplateArg>;            \
  extern template class std::vector<RMF::TemplateName<RMF::TemplateArg> >

#define RMF_TEMPLATE_DEF(TemplateName, TemplateArg, Name)               \
  template class RMF::TemplateName<RMF::TemplateArg>;                   \
  template class std::vector<RMF::TemplateName<RMF::TemplateArg> >

#else
#define RMF_VECTOR_DECL(Name) namespace RMF {\
class Name;\
typedef std::vector<Name> Name##s;\
}
#define RMF_VECTOR_DEF(Name)

#define RMF_TEMPLATE_DECL(TemplateName, TemplateArg, Name) \
namespace RMF {\
typedef TemplateName<TemplateArg> Name;\
typedef std::vector<Name> Name##s;\
}

#define RMF_TEMPLATE_DEF(TemplateName, TemplateArg, Name)

#endif

#ifdef _MSC_VER
#pragma warning(disable: 4003)
#endif

#endif  /* RMF_CONFIG_H */
